@using TechnicalDocuIndexer.Web.Util
@model DocumentDetails
@{
    ViewData["Title"] = "Document details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h4>Document details</h4>
    <hr/>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissible" style="margin-top:20px">
            @ViewBag.Message
        </div>
    }
    @if (Model == null)
    {
        <div>Can not load document details, please try again later.</div>
    }
    else
    {
        <h2>
            @Model.metadata_storage_name <a type="button" class="btn btn-primary" asp-controller="DocumentDetails" asp-action="File" asp-route-id="@Model.metadata_storage_path">Download</a>
        </h2>

        <div>
            <img style="width:100%;" src="@Url.Action("File", "DocumentDetails", new {id = @Model.metadata_storage_path})"/>
        </div>


        <h5>Content</h5>
        @FileDisplayHelper.ParseToHtml(@Model.metadata_storage_file_extension, @Model.merged_content);
        <div>
            <hr>
            <h5>Keyphrases</h5>
            @foreach (var phrase in Model.keyphrases)
            {
                @(phrase + " ")
                ;
            }
            <hr/>
        </div>
        <p>
            <hr>
            <h5>Organizations</h5>
            @foreach (var org in Model.organizations)
            {
                @(org + " ")
                ;
            }
            <hr/>
        </p>
        <p>
            <hr>
            <h5>Image Tags</h5>
            @foreach (var tag in Model.imageTags)
            {
                @(tag + " ")
                ;
            }
            <hr/>
        </p>
    }
